{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["ESNext"],
    "module": "es2022",
    "moduleResolution": "Bundler",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
    },
    "declaration": true,
    "composite": false,
    "outDir": "./dist/esm",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
